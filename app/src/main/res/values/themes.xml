<resources xmlns:tools="http://schemas.android.com/tools">
    <!--<style name="Base.Theme.Daftree" parent="Theme.Material3.DayNight.NoActionBar">-->
    <style name="Base.Theme.Daftree" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>

        <!-- ✅ Navigation Bar: شفاف للسماح بـ Edge-to-Edge -->
        <item name="android:navigationBarColor">@android:color/transparent</item>


        <!-- ✅ Status Bar: شفاف تمامًا - سيتم التحكم به برمجياً -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- ✅ إزالة windowTranslucentStatus - يتعارض مع Edge-to-Edge على Android 15 -->
        <!-- <item name="android:windowTranslucentStatus">true</item> -->

        <!-- ✅ إزالة windowTranslucentNavigation - يتعارض مع Edge-to-Edge -->
        <!-- <item name="android:windowTranslucentNavigation">true</item> -->

        <!-- ✅ تفعيل رسم خلفية النظام -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- ✅ أيقونات شريط الحالة: داكنة أو فاتحة حسب التصميم -->
        <!-- false = أيقونات بيضاء (للخلفيات الداكنة) -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- ✅ Android 15: دعم Display Cutout -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>

        <item name="actionBarInsetTop">@dimen/status_bar_height</item>
        <item name="toolbarStyle">@style/Widget.MyApp.Toolbar</item>

        <!-- جعل المحتوى يظهر خلف شريط الحالة -->
<!--        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>-->



        <!--        <item name="android:forceDarkAllowed">false</item>-->

    </style>

    <style name="Theme.Daftree" parent="Base.Theme.Daftree" />

    <style name="Widget.MyApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">#FFFFFFFF</item>
        <item name="subtitleTextColor">#FFFFFFFF</item>
        <item name="navigationIconTint">#FFFFFFFF</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="ShapeAppearance.Material3.Corner.Top.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/btn_padding_left</item>
        <item name="android:paddingRight">@dimen/btn_padding_right</item>
        <item name="strokeColor">@color/btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/btn_stroke_size</item>
    </style>

    <style name="App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:searchIcon">@drawable/ic_search_white</item>
        <item name="android:closeIcon">@drawable/ic_close_white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/cairo_font_family</item>
        <item name="fontFamily">@font/cairo_font_family</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="TextAppearance.App.Cairo.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/cairo_font_family</item>
        <item name="fontFamily">@font/cairo_font_family</item>
    </style>

    <style name="TextAppearance.App.Cairo.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/cairo_font_family</item>
        <item name="fontFamily">@font/cairo_font_family</item>
    </style>

    <style name="TextAppearance.App.Cairo.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/cairo_font_family</item>
        <item name="fontFamily">@font/cairo_font_family</item>
    </style>


    <style name="Widget.App.Button.Cairo" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/cairo_font_family</item>
        <item name="fontFamily">@font/cairo_font_family</item> <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.App.EditText.Cairo" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/cairo_font_family</item>
        <item name="fontFamily">@font/cairo_font_family</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="HelpSectionTitle" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="HelpSectionContent" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="HelpContactItem" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>
    <style name="UnclosableDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Theme.Daftree.FullScreenDialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>
    <style name="ShapeAppearance.Material3.SmallComponent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Material3.MediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Material3.LargeComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Theme.Manus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="LanguageRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>
    <!-- نمط الديالوج -->
    <style name="BottomSlideDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- حركات الديالوج -->
    <style name="BottomSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>