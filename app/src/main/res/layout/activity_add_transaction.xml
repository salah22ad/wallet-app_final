<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.AddTransactionActivity">

    <!-- شريط التطبيق -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MyApp.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:paddingTop="?attr/actionBarInsetTop"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="@string/add_transaction_title"
            android:fitsSystemWindows="true"
            android:textSize="13dp"
            app:navigationIcon="@drawable/ic_arrow_back_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- الحقول القابلة للتمرير -->
    <ScrollView
        android:id="@+id/inputFieldsScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/inputFieldsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- الصف الأول -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/accountNameLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:hint="@string/account_name_hint">

                    <AutoCompleteTextView
                        android:id="@+id/accountNameAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:tag="exclude_global_filter"
                        android:textSize="15dp"
                        android:inputType="text|textNoSuggestions"
                        android:importantForAutofill="no"
                        android:autofillHints=""
                        android:textIsSelectable="true"
                        android:imeOptions="actionNext"
                        android:selectAllOnFocus="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amountLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1.5"
                    android:hint="@string/amount_hint"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calculator"
                    app:endIconContentDescription="@string/calculator">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amountEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- الصف الثاني -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/detailsLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:hint="@string/details_hint">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/detailsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:tag="exclude_global_filter"
                        android:textSize="15dp"
                        android:inputType="text"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:hint="@string/date_hint"
                    app:startIconDrawable="@drawable/ic_calendar_today">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:gravity="center"
                        android:textSize="15dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- اختيار العملة -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/currency_spinner_layout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:hint="@string/currency_hint">

                <AutoCompleteTextView
                    android:id="@+id/currency_spinner_autocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="none"
                    android:textSize="15dp"
                    tools:text="@string/currency_local" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- أزرار الإجراء -->
            <LinearLayout
                android:id="@+id/actionButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/creditButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.App.Cairo.TitleLarge"
                    android:layout_marginEnd="8dp"
                    android:text="@string/type_credit"
                    android:textSize="15dp"
                    android:backgroundTint="@color/green"
                    app:icon="@drawable/ic_arrow_up_green" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/debitButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.App.Cairo.TitleLarge"
                    android:layout_marginStart="8dp"
                    android:text="@string/type_debit"
                    android:textSize="15dp"
                    android:backgroundTint="@color/red"
                    app:icon="@drawable/ic_arrow_down_red" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- الفاصل -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:background="?attr/colorOutline"
        app:layout_constraintTop_toBottomOf="@id/inputFieldsScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- عنوان الريسايكلر -->
    <LinearLayout
        android:id="@+id/recyclerHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/date_hint"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/amount_hint"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/details_hint"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/balanceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/balance"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <!-- الريسايكلر -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionsHistoryRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_transaction_history" />

    <!-- بانر التأكيد -->
    <include
        android:id="@+id/save_confirmation_banner"
        layout="@layout/banner_transaction_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>