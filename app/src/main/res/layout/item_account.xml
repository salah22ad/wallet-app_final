<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- أيقونة الحساب -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_card"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/account_color_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:background="@color/chart_color_7" />

                <ImageView
                    android:id="@+id/accountIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_account_balance_wallet" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- معلومات الحساب الرئيسية -->
        <LinearLayout
            android:id="@+id/account_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/icon_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/balance_info"
            app:layout_constraintEnd_toStartOf="@id/addTransactionButton"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/accountNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_primary"
                tools:text="حساب البنك الأهلي" />

            <TextView
                android:id="@+id/accountTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="حساب بنكي - الريال اليمني" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/addTransactionButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/account_info"
            app:layout_constraintEnd_toStartOf="@id/action_section"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/add_transaction_desc"
            android:src="@drawable/ic_add_circle"
            app:tint="@color/accent_light" />

        <!-- معلومات الرصيد -->
        <LinearLayout
            android:id="@+id/balance_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/icon_card"
            app:layout_constraintTop_toBottomOf="@id/account_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addTransactionButton"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/balance"
                android:textSize="12dp"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/balanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                tools:text="25,000 ر.ي" />

        </LinearLayout>

        <!-- القسم الجانبي (الاتجاهات والإجراءات) -->
        <LinearLayout
            android:id="@+id/action_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <!-- زر إضافة عملية -->
            <!-- اتجاه الرصيد وأيقونة السهم -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/arrowImageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_up_green"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/balance_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/success_color"
                    tools:text="+5%" />

            </LinearLayout>

            <!-- عدد العمليات -->
            <TextView
                android:id="@+id/transactionCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/chip_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="?attr/colorPrimary"
                android:textSize="11dp"
                tools:text="45 عملية" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>