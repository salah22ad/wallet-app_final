<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/iv_dialog_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_smartphone"
            android:layout_marginEnd="12dp"
            app:tint="@color/primaryColor" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/manage_devices"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:text="@string/tv_device_message"
        android:background="@drawable/contact_background"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/devices_licenced"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/layout_limit_exceeded_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center">

        <Button
            android:id="@+id/btn_continue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/continue_as_free_user"
            android:textColor="@color/primary_blue"
            android:strokeColor="@color/primary_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_exit"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent_orange"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_button"
        android:visibility="visible"
        android:layout_marginTop="8dp"/>

</LinearLayout>